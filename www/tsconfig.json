{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noImplicitAny": true,
    "module": "es2020", // or "es2019" for better compatibility
    "target": "es2020", // or "es2019"
    // "module": "es2022",
    // "target": "es2022",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
